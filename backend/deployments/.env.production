# Production environment configuration

# JWT Configuration
JWT_SECRET_KEY=change_this_to_a_secure_random_string
JWT_EXPIRES_IN=30

# Database Configuration
POSTGRES_USER=postgres
POSTGRES_PASSWORD=change_this_to_a_secure_password
POSTGRES_DB=webui
DATABASE_URL=postgresql://postgres:change_this_to_a_secure_password@postgres:5432/webui
DATABASE_POOL_SIZE=20

# Inference Service Configuration
ENABLE_OLLAMA_API=true
OLLAMA_BASE_URLS=http://ollama:11434
ENABLE_OPENAI_API=true
OPENAI_API_BASE_URLS=https://api.openai.com/v1
OPENAI_API_KEYS=your-openai-api-key

# Agent Service Configuration
ENABLE_CODE_EXECUTION=false
ENABLE_CODE_INTERPRETER=false
ENABLE_TOOLS=true
TASK_MODEL=gpt-3.5-turbo

# Retrieval Service Configuration
VECTOR_DB=chroma
EMBEDDING_MODEL=all-MiniLM-L6-v2
ENABLE_RAG_HYBRID_SEARCH=true
ENABLE_RAG_LOCAL_WEB_FETCH=true
ENABLE_RAG_WEB_SEARCH=true
RAG_WEB_SEARCH_ENGINE=duckduckgo

# Chat Service Configuration
ENABLE_CHAT_HISTORY=true
ENABLE_CHAT_TEMPLATES=true
ENABLE_CHAT_EXPORT=true
ENABLE_CHAT_SHARING=true

# Domain Configuration for SSL
DOMAIN_NAME=your-domain.com
EMAIL_ADDRESS=your-email@example.com
